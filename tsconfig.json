{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2022",
		"outDir": "out",
		"lib": [
			"ES2022",
			"dom"
		],
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"noImplicitReturns": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
	},
	"exclude": [
		"node_modules",
		".vscode-test",
		"media"
	],
	"include": [
		"src/**/*",
		//"packages/sdfv/src/**/*",
		//"packages/sdfv/packages/rendure/src/**/*"
	]
}
